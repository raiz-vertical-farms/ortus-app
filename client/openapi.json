{
  "openapi": "3.1.0",
  "info": {
    "title": "Raiz API",
    "description": "API for the Raiz platform",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "operationId": "login",
        "summary": "Authenticate an existing user",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jwt": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "jwt"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        }
      }
    },
    "/api/auth/signup": {
      "post": {
        "operationId": "signup",
        "summary": "Register a new user",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "User created or already existed with matching password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jwt": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "jwt"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        }
      }
    },
    "/api/plant/plant/create": {
      "post": {
        "operationId": "createPlant",
        "summary": "Create a new plant",
        "tags": [
          "Plants"
        ],
        "responses": {
          "200": {
            "description": "Plant created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plant": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "device_id": {
                          "type": "number"
                        },
                        "plant_type_id": {
                          "type": "number"
                        },
                        "location": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "id",
                        "device_id",
                        "plant_type_id",
                        "location"
                      ]
                    }
                  },
                  "required": [
                    "plant"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "device_id": {
                    "type": "number"
                  },
                  "plant_type_id": {
                    "type": "number"
                  },
                  "location": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "device_id",
                  "plant_type_id",
                  "location"
                ]
              }
            }
          }
        }
      }
    },
    "/api/device/create": {
      "post": {
        "operationId": "createDevice",
        "summary": "Register a new device",
        "tags": [
          "Devices"
        ],
        "responses": {
          "200": {
            "description": "Device created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "device": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "name": {
                          "type": "string"
                        },
                        "organization_id": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "organization_id"
                      ]
                    }
                  },
                  "required": [
                    "device"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mac_address": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "organization_id": {
                    "type": "number"
                  }
                },
                "required": [
                  "mac_address",
                  "name",
                  "organization_id"
                ]
              }
            }
          }
        }
      }
    },
    "/api/device/{id}": {
      "delete": {
        "operationId": "deleteDevice",
        "summary": "Delete a device",
        "tags": [
          "Devices"
        ],
        "responses": {
          "200": {
            "description": "Device deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Device not found"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/api/device/{id}/state": {
      "get": {
        "operationId": "deviceState",
        "summary": "Retrieve the latest state for a specific device",
        "tags": [
          "Devices"
        ],
        "responses": {
          "200": {
            "description": "Device state",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "state": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "created_at": {
                          "type": "number"
                        },
                        "name": {
                          "type": "string"
                        },
                        "mac_address": {
                          "type": "string"
                        },
                        "organization_id": {
                          "type": "number"
                        },
                        "last_seen": {
                          "anyOf": [
                            {
                              "type": "number"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "online": {
                          "type": "boolean"
                        },
                        "brightness": {
                          "anyOf": [
                            {
                              "type": "number"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "light_schedule": {
                          "anyOf": [
                            {
                              "type": "object",
                              "properties": {
                                "active": {
                                  "type": "boolean"
                                },
                                "on": {
                                  "description": "UTC timestamp in milliseconds",
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 9007199254740991
                                },
                                "off": {
                                  "description": "UTC timestamp in milliseconds",
                                  "type": "integer",
                                  "minimum": 0,
                                  "maximum": 9007199254740991
                                }
                              },
                              "required": [
                                "active",
                                "on",
                                "off"
                              ]
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "lan_ip": {
                          "anyOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "lan_ws_port": {
                          "anyOf": [
                            {
                              "type": "number"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        }
                      },
                      "required": [
                        "id",
                        "created_at",
                        "name",
                        "mac_address",
                        "organization_id",
                        "last_seen",
                        "online",
                        "brightness",
                        "light_schedule",
                        "lan_ip",
                        "lan_ws_port"
                      ]
                    }
                  },
                  "required": [
                    "state"
                  ]
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/api/device/all": {
      "get": {
        "operationId": "allDevices",
        "summary": "List devices",
        "tags": [
          "Devices"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "devices": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "number"
                          },
                          "created_at": {
                            "type": "number"
                          },
                          "name": {
                            "type": "string"
                          },
                          "mac_address": {
                            "type": "string"
                          },
                          "organization_id": {
                            "type": "number"
                          },
                          "last_seen": {
                            "anyOf": [
                              {
                                "type": "number"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          },
                          "online": {
                            "type": "boolean"
                          },
                          "lan_ip": {
                            "anyOf": [
                              {
                                "type": "string"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          },
                          "lan_ws_port": {
                            "anyOf": [
                              {
                                "type": "number"
                              },
                              {
                                "type": "null"
                              }
                            ]
                          }
                        },
                        "required": [
                          "id",
                          "created_at",
                          "name",
                          "mac_address",
                          "organization_id",
                          "last_seen",
                          "online",
                          "lan_ip",
                          "lan_ws_port"
                        ]
                      }
                    }
                  },
                  "required": [
                    "devices"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/device/{id}/light/brightness": {
      "post": {
        "operationId": "setBrightness",
        "summary": "Adjust the the brightness of the light",
        "tags": [
          "Devices"
        ],
        "responses": {},
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "brightness": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                  }
                },
                "required": [
                  "brightness"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/api/device/{id}/light/schedule": {
      "post": {
        "operationId": "scheduleLight",
        "summary": "Set a schedule for the light",
        "tags": [
          "Devices"
        ],
        "responses": {},
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "active": {
                    "type": "boolean"
                  },
                  "on": {
                    "description": "UTC timestamp in milliseconds",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 9007199254740991
                  },
                  "off": {
                    "description": "UTC timestamp in milliseconds",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 9007199254740991
                  }
                },
                "required": [
                  "active"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ]
      }
    },
    "/api/network/my-ip": {
      "get": {
        "operationId": "myIp",
        "summary": "Get my IP address",
        "tags": [
          "Network"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ip": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "ip"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/network/local-devices": {
      "get": {
        "operationId": "localDevices",
        "summary": "Get devices that recently announced presence from the same IP",
        "tags": [
          "Devices"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "mac_address": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "mac_address"
                    ]
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "ip",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ]
      }
    }
  },
  "components": {}
}