                              "type": "object",
                              "properties": {
                                "from_hour": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 23
                                },
                                "from_minute": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 59
                                },
                                "to_hour": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 23
                                },
                                "to_minute": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 59
                                }
                              },
                              "required": [
                                "from_hour",
                                "from_minute",
                                "to_hour",
                                "to_minute"
                              ]
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "water_level": {
                          "anyOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "number_of_plants": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "mac_address",
                        "organization_id",
                        "last_seen",
                        "left_light",
                        "left_light_schedule",
                        "right_light",
                        "right_light_schedule",
                        "water_level",
                        "number_of_plants"
                      ]
                    }
                  },
                  "required": [
                    "state"
                  ]
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
