                                "from_minute": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 59
                                },
                                "to_hour": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 23
                                },
                                "to_minute": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 59
                                }
                              },
                              "required": [
                                "from_hour",
                                "from_minute",
                                "to_hour",
                                "to_minute"
                              ]
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "right_light": {
