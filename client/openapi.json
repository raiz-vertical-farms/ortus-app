                    "state": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "name": {
                          "type": "string"
                        },
                        "mac_address": {
                          "type": "string"
                        },
                        "organization_id": {
                          "type": "number"
                        },
                        "last_seen": {
                          "anyOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "left_light": {
